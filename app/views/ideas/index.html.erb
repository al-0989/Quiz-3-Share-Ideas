<p id="notice"><%= notice %></p>

<h1>Listing Ideas</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Title</th>
      <th>Creator</th>
      <th>Idea</th>
      <th>Joined Users</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ideas.each do |idea| %>
      <tr>
        <td><%= idea.title %></td>
        <td><%= idea.user_full_name %></td>
        <td><%= idea.body %></td>
        <td><%= idea.joins.count %></td>
        <td><%= link_to 'Show', idea %></td>
      </tr>
    <% end %>
  </tbody>
</table>
